<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="@color/bg_color"
    android:orientation="horizontal">


    <ImageView
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:id="@+id/user_profile_pic"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/user_name_txt"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@+id/user_profile_pic"
        android:layout_toLeftOf="@+id/acceptBtn"
         />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/FR_Accept"
        android:id="@+id/acceptBtn"
        android:background="@color/positve_btn"
        android:textColor="@color/bg_color"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/rejectBtn"
         />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/FR_Reject"
        android:id="@+id/rejectBtn"
        android:layout_marginLeft="10dp"
        android:background="@color/negative_btn"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:textColor="@color/bg_color"
        android:layout_alignParentEnd="true" />
</RelativeLayout>