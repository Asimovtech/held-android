<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:layout_marginLeft="10dp"
    android:layout_marginRight="10dp"
    android:background="#1affffff"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/RFR_user_img"
        android:layout_width="65dp"
        android:layout_height="65dp"
        android:layout_margin="5dp"
        android:scaleType="centerCrop" />

    <com.held.customview.CustomTextView
        android:id="@+id/RFR_user_name_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginRight="5dp"
        android:layout_toLeftOf="@+id/RFR_accept_btn"
        android:layout_toRightOf="@+id/RFR_user_img"
        android:ellipsize="end"
        android:singleLine="true"
        android:text="Smaple Data"
        android:textColor="#ffffff"
        android:textSize="16sp"
        custom:typeFace="@string/freight_sans_book" />

    <com.held.customview.CustomButton
        android:id="@+id/RFR_delete_btn"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="10dp"
        android:background="@drawable/button_background"
        android:text="Delete"
        android:textAllCaps="false"
        android:textColor="#ffffff" />

    <com.held.customview.CustomButton
        android:id="@+id/RFR_accept_btn"
        android:layout_width="70dp"
        android:layout_height="30dp"
        android:layout_centerVertical="true"
        android:layout_marginRight="15dp"
        android:layout_toLeftOf="@+id/RFR_delete_btn"
        android:background="#ffcc33"
        android:gravity="center"
        android:text="Accept"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="14sp" />

</RelativeLayout>