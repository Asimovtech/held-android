<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:id="@+id/BOX_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginTop="20dp"
    android:background="#1affffff">

    <RelativeLayout
        android:id="@+id/BOX_top_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/BOX_profile_img"
            android:layout_width="65dp"
            android:layout_height="65dp"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="5dp"
            android:fitsSystemWindows="true"
            android:scaleType="centerCrop" />

        <com.held.customview.CustomTextView
            android:id="@+id/BOX_user_name_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="7dp"
            android:layout_toRightOf="@+id/BOX_profile_img"
            android:textColor="#ffffff"
            android:textSize="18sp"
            custom:typeFace="@string/freight_sans_medium" />

        <com.held.customview.CustomTextView
            android:id="@+id/BOX_des_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/BOX_user_name_txt"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/BOX_profile_img"
            android:lineSpacingExtra="5dp"
            android:textColor="#ffffff"
            android:textSize="18sp"
            custom:typeFace="@string/freight_sans_book" />

        <com.held.customview.CustomEditText
            android:id="@+id/BOX_des_edt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/BOX_user_name_txt"
            android:layout_marginLeft="7dp"
            android:layout_marginRight="7dp"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@+id/BOX_profile_img"
            android:background="#1affffff"
            android:lineSpacingExtra="5dp"
            android:maxLength="40"
            android:textColor="#ffffff"
            android:textCursorDrawable="@drawable/cursor_background"
            android:textSize="18sp"
            android:visibility="gone"
            custom:typeFace="@string/freight_sans_book" />
    </RelativeLayout>

    <ImageView
        android:id="@+id/BOX_main_img"
        android:layout_width="match_parent"
        android:layout_height="350dp"
        android:layout_below="@+id/BOX_top_layout"
        android:layout_marginTop="5dp"
        android:scaleType="centerCrop" />

    <com.held.customview.CustomTextView
        android:id="@+id/BOX_time_txt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:textColor="#ffffff"
        android:textSize="18sp"
        custom:typeFace="@string/freight_sans_book" />

</RelativeLayout>

