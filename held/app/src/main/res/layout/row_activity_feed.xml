<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/row_activity_feed"
    android:background="@color/bg_color"
    >
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        >

        <ImageView
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:id="@+id/post_img"
            android:scaleType="centerCrop"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textLayout"
            android:layout_toRightOf="@id/post_img"
            android:orientation="vertical"
            android:layout_toLeftOf="@+id/activity_feed_time_txt"
            android:layout_toStartOf="@+id/activity_feed_time_txt">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hello"
                android:id="@+id/activity_feed_txt"
                android:textSize="12sp"
                android:textColor="@color/activity_feed_txt_color"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Hello"
                android:id="@+id/feed_desc_time"
                android:textSize="12sp"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello"
            android:id="@+id/activity_feed_time_txt"
            android:layout_alignParentRight="true"
            android:textColor="@color/chat_time_color"
            android:textSize="12sp"/>



    </RelativeLayout>


</RelativeLayout>