<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:id="@+id/BOX_top_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="5dp">

    <RelativeLayout
        android:id="@+id/CHATLEFT_top_layout"
        android:layout_width="270dp"
        android:layout_height="86dp"
        android:background="@color/chatBox_left_color"
        android:alpha=".95">

        <ImageView
            android:id="@+id/CHATLEFT_profile_img"
            android:layout_width="43dp"
            android:layout_height="43dp"
            android:layout_marginBottom="5dp"
            android:fitsSystemWindows="true"
            android:scaleType="centerCrop" />

        <TextView
            android:id="@+id/CHATLEFT_user_name_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="7dp"
            android:layout_toRightOf="@+id/CHATLEFT_profile_img"
            android:textColor="@color/userName_color"
            android:textSize="13sp"
            android:text="UserName"
            />

        <TextView
            android:id="@+id/CHATLEFT_des_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/CHATLEFT_user_name_txt"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/CHATLEFT_profile_img"
            android:lineSpacingExtra="5dp"
            android:text="Hello"
            android:textColor="@color/description_color"
            android:textSize="13sp"
             />
        <TextView
            android:id="@+id/CHATLEFT_date_txt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="6dp"
            android:layout_marginTop="8dp"
            android:layout_alignParentRight="true"
            android:lineSpacingExtra="5dp"
            android:textColor="@color/chatBox_left_time_color"
            android:textSize="13sp"
            android:text="time"
            />
    </RelativeLayout>


</RelativeLayout>