<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:id="@+id/BOX_top_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp">

    <RelativeLayout
        android:id="@+id/CHATLEFT_top_layout"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:background="#1affffff">

        <ImageView
            android:id="@+id/CHATLEFT_profile_img"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:fitsSystemWindows="true"
            android:scaleType="centerCrop" />

        <com.held.customview.CustomTextView
            android:id="@+id/CHATLEFT_user_name_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="7dp"
            android:layout_toRightOf="@+id/CHATLEFT_profile_img"
            android:textColor="#ffffff"
            android:textSize="18sp"
            custom:typeFace="@string/freight_sans_medium" />

        <com.held.customview.CustomTextView
            android:id="@+id/CHATLEFT_des_txt"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/CHATLEFT_user_name_txt"
            android:layout_marginLeft="7dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@+id/CHATLEFT_profile_img"
            android:lineSpacingExtra="5dp"
            android:textColor="#ffffff"
            android:textSize="18sp"
            custom:typeFace="@string/freight_sans_book" />
    </RelativeLayout>

    <com.held.customview.CustomTextView
        android:id="@+id/CHATLEFT_date_txt"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/CHATLEFT_top_layout"
        android:layout_marginRight="5dp"
        android:layout_marginTop="5dp"
        android:gravity="right"
        android:lineSpacingExtra="5dp"
        android:textColor="#ffffff"
        android:textSize="18sp"
        custom:typeFace="@string/freight_sans_book" />
</RelativeLayout>