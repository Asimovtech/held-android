<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="65dp"
    android:background="@color/bg_color"
    android:id="@+id/search_toolbar"
    android:fitsSystemWindows="true"
    >

   <RelativeLayout
       android:layout_width="match_parent"
       android:layout_height="match_parent"
       android:id="@+id/search_toolbar_relativeLayout"

       >

    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/search_img"
        android:src="@drawable/search_icon_v2"
        android:layout_marginLeft="10dp"
        android:layout_centerVertical="true"


/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/search_txt"
        android:editable="true"
        android:textSize="13sp"
        android:textColor="@color/userName_color"
        android:text="Annawilkinson"
        android:layout_marginLeft="50dp"
        android:layout_centerVertical="true"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cancle_txt"
        android:textColor="@color/friend_req_color"
        android:text="Cancel"
        android:textSize="13sp"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        />
   </RelativeLayout>
</android.support.v7.widget.Toolbar>