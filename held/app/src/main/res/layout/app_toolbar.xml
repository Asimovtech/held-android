<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="?attr/colorPrimary"
    android:id="@+id/toolbar_main"
    android:visibility="visible"
    android:elevation="4dp"
    >

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/toolbar_layout"
    android:layout_marginRight="10dp">
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar_chat_img"
        android:src="@drawable/chat"
        android:layout_centerVertical="true"
        android:layout_centerInParent="true"
        android:layout_alignParentLeft="true"
         />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar_invite_txt"
        android:textColor="@color/white"
        android:text="Invite"
        android:textSize="16sp"
        android:letterSpacing=".05"
        android:layout_centerVertical="true"
        android:layout_marginLeft="10dp"
        android:layout_toEndOf="@id/toolbar_chat_img"
         />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar_title_txt"
        android:textColor="@color/white"
        android:text="Home"
        android:textSize="16sp"
        android:letterSpacing=".05"
        android:layout_centerInParent="true"
        />
    <EditText
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar_search_edt_txt"
        android:editable="true"
        android:maxLines="1"
        android:hint="Search...."
        android:inputType="text"
        android:textSize="16sp"
        android:letterSpacing=".05"
        android:textColor="@color/white"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        android:textColorHint="@color/white"
        android:layout_marginLeft="50dp"
        android:visibility="gone"
        />


        <!-- com.held.customview.CustomTextView
            android:id="@+id/TOOLBAR_user_name_txt"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/TOOLBAR_notification_img"
            android:layout_toRightOf="@+id/TOOLBAR_chat_img"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:visibility="invisible"
            custom:typeFace="@string/freight_sans_medium" / -->


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar_search_img"
        android:src="@drawable/search"
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/toolbar_notification_img"
        android:layout_toStartOf="@+id/toolbar_notification_img" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar_notification_img"
        android:src="@drawable/notification"
        android:layout_marginRight="10dp"
        android:layout_centerVertical="true"
        android:layout_toLeftOf="@+id/toolbar_post_img"
        android:layout_toStartOf="@+id/toolbar_post_img" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar_post_img"
        android:src="@drawable/camera"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"

         />

</RelativeLayout>

</android.support.v7.widget.Toolbar>

