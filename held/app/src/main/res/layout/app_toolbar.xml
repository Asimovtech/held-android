<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="65dp"
    android:background="@color/bg_color"
    android:id="@+id/toolbar_main"
    android:visibility="visible"
    >
<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="65dp"
    android:id="@+id/toolbar_layout"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/toolbar_chat_img"
        android:src="@drawable/chat"
        android:layout_marginLeft="10dp"
        android:layout_alignTop="@+id/toolbar_title_txt"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar_title_txt"
        android:textColor="@color/new_btn_color"
        android:text="Home"
        android:textSize="16sp"
        android:layout_centerInParent="true"
        />
    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/toolbar_search_edt_txt"
        android:visibility="visible"
        android:editable="true"
        android:maxLength="30"
        android:hint="Search...."
        android:layout_centerInParent="true" />


        <!-- com.held.customview.CustomTextView
            android:id="@+id/TOOLBAR_user_name_txt"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_centerInParent="true"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/TOOLBAR_notification_img"
            android:layout_toRightOf="@+id/TOOLBAR_chat_img"
            android:gravity="center"
            android:textColor="#ffffff"
            android:textSize="18sp"
            android:visibility="invisible"
            custom:typeFace="@string/freight_sans_medium" / -->


    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/toolbar_search_img"
        android:src="@drawable/search_icon_v2"
        android:layout_marginRight="10dp"
        android:layout_alignTop="@+id/toolbar_notification_img"
        android:layout_toLeftOf="@+id/toolbar_notification_img"
        android:layout_toStartOf="@+id/toolbar_notification_img" />
    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/toolbar_notification_img"
        android:src="@drawable/notification"
        android:layout_marginRight="10dp"
        android:layout_alignTop="@+id/toolbar_title_txt"
        android:layout_toLeftOf="@+id/toolbar_post_img"
        android:layout_toStartOf="@+id/toolbar_post_img" />
    <ImageView
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:id="@+id/toolbar_post_img"
        android:src="@drawable/camera"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="20dp"
        android:layout_marginEnd="20dp" />

</RelativeLayout>
</android.support.v7.widget.Toolbar>

